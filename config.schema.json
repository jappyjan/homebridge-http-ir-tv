{
  "pluginAlias": "HTTP-IR-TV",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "HTTP-IR-TV",
        "type": "string",
        "required": true,
        "default": "HTTP-IR-TV Platform"
      },
      "ip": {
        "title": "ESP8266 IP-Address/Hostname",
        "type": "string",
        "required": true,
        "format": "hostname"
      },
      "port": {
        "title": "ESP8266 Port",
        "type": "number",
        "required": true,
        "default": 80
      },
      "path": {
        "title": "ESP8266 HTTP Path",
        "type": "string",
        "required": true,
        "default": "/send"
      }
    }
  }
}
